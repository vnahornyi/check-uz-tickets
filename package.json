{
  "name": "check-uz-tickets",
  "version": "1.0.0",
  "description": "A Telegram bot for tracking ticket availability using tracking links.",
  "main": "src/bot/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot/index.js",
    "worker": "node dist/worker/worker.js",
    "dev": "ts-node-dev --respawn --transpile-only src/bot/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker/worker.ts",
    "predeploy:worker": "npx playwright install && npx playwright install-deps",
    "predeploy:app": "npm run migrate",
    "migrate": "ts-node src/db/migrate.ts",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/migrations": "^6.6.2",
    "@mikro-orm/postgresql": "^6.6.2",
    "bull": "^3.18.0",
    "node-telegram-bot-api": "^0.54.0",
    "pg": "^8.7.1",
    "playwright": "^1.57.0",
    "redis": "^3.1.2",
    "telegraf": "^4.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bull": "^3.15.9",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/redis": "^4.0.10",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "telegram",
    "bot",
    "tracking",
    "tickets"
  ],
  "author": "vnahornyi",
  "license": "MIT"
}
